{
  "name": "remote time",
  "version": "1.0.0",
  "description": "GitHub Action to get the current time from WorldClock",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "keywords": [
    "actions",
    "time",
    "clock",
    "ntp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.3.0",
    "@actions/http-client": "^1.0.11",
    "all": "0.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "js-yaml": "^3.14.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.3.2"
  }
}
